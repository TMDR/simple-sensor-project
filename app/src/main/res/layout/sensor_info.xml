<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0px"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/ic_market_store"/>
    <TextView
        android:layout_width="0px"
        android:layout_height="20dp"
        android:layout_weight="4"
        android:id="@+id/Vendor"
        />
</LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="1"
    android:src="@drawable/version"/>
<TextView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="4"
    android:id="@+id/Version_Mine"
    />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="1"
    android:src="@drawable/type"
    />
<TextView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="4"
    android:id="@+id/Type"
    />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="1"
    android:src="@drawable/max_range"
    />
<TextView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="4"
    android:id="@+id/MaxRange"
    />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="1"
    android:src="@drawable/resolution"/>
<TextView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="4"
    android:id="@+id/Resolution"
    />
</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="1"
    android:src="@drawable/power"
    />
<TextView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="4"
    android:id="@+id/Power"
    />
</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<ImageView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="1"
    android:src="@drawable/min_delay"
    />
<TextView
    android:layout_width="0px"
    android:layout_height="20dp"
    android:layout_weight="4"
    android:id="@+id/MinDelay_Mine"
    />
</LinearLayout>
</LinearLayout>